<div class="p-5 bg-light">
<h2 class="mb-5">Centro de Mensajes</h2>
    <form id="chat">
        <input class="form-control" type="email" id="email" name="email" placeholder="Ingresa tu email..." required><br>
        <input class="form-control" type="text" id="nombre" name="nombre" placeholder="Ingresa tu nombre..." required><br>
        <input class="form-control" type="text" id="apellido" name="apellido" placeholder="Ingresa tu apellido..." required><br>
        <input class="form-control" type="number" id="edad" name="edad" placeholder="Ingresa tu edad..." required><br>
        <input class="form-control" type="text" id="avatar" name="avatar" placeholder="Ingresa tu avatar URL..."><br>
        <input class="form-control" type="text" id="alias" name="alias" placeholder="Ingresa tu alias..."><br>
        <textarea class="form-control" type="text" id="text" name="text" placeholder="Ingresa un mensaje..."></textarea><br>
        <button type="submit" class="btn btn-primary">Enviar!</button>

        
        <hr>
        <ul class="mensajes">
            {{#each messages}}
            <li>
                <span class="email">{{this.alias}}</span> 
                <time>[{{this.date}}]</time> 
                <span class="mensaje">{{this.text}}</span>
                <span class="avatar"><img src="{{this.avatar}}" alt="{{this.alias}}"></span>
            </li>
            {{/each}}
        </ul>
    </form>
</div>